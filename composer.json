{
  "name": "flix-tech/avro-serde-php",
  "description": "A library to serialize and deserialize Avro records making use of the confluent schema registry",
  "keywords": ["Confluent Platform", "Confluent", "Avro", "Avro SerDe", "Kafka", "Serialization", "Deserialization"],
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Thomas Ploch",
      "email": "thomas.ploch@flixbus.com"
    }
  ],
  "repositories": [
    {
      "type": "git",
      "url": "git@github.com:flix-tech/avro-php.git"
    }
  ],
  "require": {
    "php": "^7.1",
    "beberlei/assert": "~2.7",
    "flix-tech/confluent-schema-registry-api": "^5.0",
    "widmogrod/php-functional": "^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.0",
    "phpstan/phpstan": "~0.8",
    "friendsofphp/php-cs-fixer": "~2.0",
    "phpbench/phpbench": "~0.9",
    "vlucas/phpdotenv": "~2.4"
  },
  "autoload": {
    "psr-4": {
      "FlixTech\\AvroSerializer\\Objects\\": "src/Objects"
    },
    "files": [
      "src/Protocol.php",
      "src/Serialize.php",
      "src/Common.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "FlixTech\\AvroSerializer\\Test\\": "test/",
      "FlixTech\\AvroSerializer\\Benchmarks\\": "benchmarks/"
    }
  }
}
